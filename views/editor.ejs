            </select>
        </div>
        <div>
          <label for="createdBy">CreatedBy</label><br>
          <input type="text" name="email" 
          value="<%= email %>" readonly>
        </div>
        <button id="button1" type="submit" class="sub1">Submit</button>
    </div>
  </form>
</body>

