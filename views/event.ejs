<body class="text-center">
    <h5>Click on the button below to start...</h5>
    <button onclick="open_button()">Create Event</button>
    <br/><br/><br/>
    <div class="popup" id="eventForm">
        <div class="text-centered">
            <form class="form-container" name="eventForm" action="/submittedEvent" method="POST">
                <table class="table table-hover">
                    <h3>Create an Event</h3>
                    <tbody>
                        <tr>
                            <td><label for="ename">Event Name</label></td>
                            <td><input type="text" placeholder="Add a short, clear name" name="ename" required></td>
                        </tr>
                        <tr>
                            <td><label for="location">Location</label></td>
                            <td><input type="text" placeholder="Include a place or address" name="location" required>
                            </td>
                            <td><i class="fas fa-map-marker-alt"></i></td>
                        </tr>
                        <tr>
                            <td><label for="description">Description</label></td>
                            <td><input type="text" placeholder="Tell us what your event is about" name="description">
                            </td>
                        </tr>
                        <tr>
                            <td><label for="keywords">Keywords</label></td>
                            <td><input type="text" placeholder="Type and/or select keywords" name="keywords"></td>
                        </tr>
                        <tr>
                            <td><label for="start">Start</label></td>
                            <td><input type="datetime-local" name="start"></td>
                        </tr>
                        <tr>
                            <td><label for="end">End</label></td>
                            <td><input type="datetime-local" name="end"></td>
                        </tr>
                    </tbody>
                </table>
                <div class="row">
                    <button class="button button3" type="button" value="Cancel" onclick="close_button()">Cancel</button>
                    <button class="button button2" type="reset" value="Reset">Reset</button>
                    <button class="button button1" type="submit" value="Submit">Submit</button>
                    <!-- onclick="testForm(); return false -->
                </div>
            </form>
        </div>
        <br/><br/><br/>
        <h3>See event details below</h3>
    </div>
